<UserControl x:Class="EzPlot.Controls.MarkerToolBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzPlot.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid Height="25" Margin="50,12,32,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="Add" Click="PlaceMarker_Click" Grid.ColumnSpan="2" Margin="15,0,19,0"/>
        <Button Grid.Column="1" Content="Remove" Click="RemoveMarker_Click" Margin="0,0,-21,0" Grid.ColumnSpan="3"/>



    </Grid>
</UserControl>
