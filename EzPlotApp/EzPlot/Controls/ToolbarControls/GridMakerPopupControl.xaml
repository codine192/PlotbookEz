<UserControl
    x:Class="EzPlot.Controls.ToolbarControls.GridMakerPopupControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EzPlot.Controls.ToolbarControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Popup x:Name="GridMakerPopup" >
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.Background>Blue</Grid.Background>
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left">
                        <TextBlock Text="Row(s)" />
                        <TextBlock Text="Plot(s)" />
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right">
                        <TextBox Width="30" />
                        <TextBox Width="30" />
                    </StackPanel>
                </DockPanel>
            </Grid>
            <Button Content="Go" />
        </StackPanel>
    </Popup>

</UserControl>
