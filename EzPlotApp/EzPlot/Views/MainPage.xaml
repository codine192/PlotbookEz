<Page x:Class="EzPlot.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EzPlot.Views" 
      xmlns:control="clr-namespace:EzPlot.Controls" 
      x:Name="Self"
      mc:Ignorable="d" 
      
      Title="MainPage">


    <Border BorderBrush="CornflowerBlue" BorderThickness="1">
        <Grid DataContext="{Binding ElementName=Self }" Height="500" Width="800">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="200*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                
            </Grid.RowDefinitions>
            
            <!-- Image Display Area -->
            
            <Canvas Name="OverlayCanvas" Background="CornflowerBlue" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" Width="800" Height="500">
                
                    <Image Name="mapImage" Stretch="UniformToFill" Height="500" Width="800"/>
                
                <control:MarkerToolBoxControl x:Name="markerToolBoxControl" Grid.Column="4" Grid.Row="0"></control:MarkerToolBoxControl>
                




            </Canvas>
        </Grid>
    </Border>


</Page>
