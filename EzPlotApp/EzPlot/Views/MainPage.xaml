<Page x:Class="EzPlot.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EzPlot.Views" 
      xmlns:control="clr-namespace:EzPlot.Controls" 
      x:Name="Self"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="MainPage">


    <Border BorderBrush="Black" BorderThickness="3">
        <Grid DataContext="{Binding ElementName=Self }">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Grid.Column="2" Grid.ColumnSpan="2" Margin="198,67,2,377" Grid.Row="1">
            <Popup  x:Name="markerPopup" Width="200" Height="150" AllowsTransparency="True" PopupAnimation="Slide">
                    <StackPanel >
                        <Label x:Name="X_label" Content="X : "/>

                        <TextBox Width="100" Text="{Binding Plot.X }"></TextBox>
                        <Label Content="Y : "></Label>
                        <TextBox Text="{Binding Plot.Y}"></TextBox>
                        <ComboBox ItemsSource="{Binding UnassignedResidents}" Text="{Binding Plot.Resident.ID}"></ComboBox>
                        <Label Content="Cemetery :"></Label>
                        <ComboBox ItemsSource="{Binding Cemetaries}" SelectedItem="{Binding Plot.Cemetery}"></ComboBox>
                        <TextBox Text="{Binding Plot.PlotbookID}"></TextBox>
                        <TextBox Text="{Binding CemeteryMarker.Y}"></TextBox>
                        
                    </StackPanel>
                </Popup>
            </Border>
            <!-- Image Display Area -->
            <control:MarkerToolBoxControl x:Name="markerToolBoxControl" Grid.Column="4" Grid.Row="0"></control:MarkerToolBoxControl>
            <Canvas Name="OverlayCanvas" Grid.ColumnSpan="5" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">
                <Image Name="mapImage" Stretch="UniformToFill"  />
                <control:MarkerControl Canvas.Left="332" Canvas.Top="192" />


                <!-- Toolbox -->
                <Button Content="Place Marker" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0"
                 Grid.Column="1" />

                <!-- Pop-up Panel (Initially Hidden) -->
                <Border Name="popupPanel" Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="5"
                HorizontalAlignment="Right" VerticalAlignment="Top" Width="200" Height="100"
                Visibility="Collapsed" Margin="0,10,10,0" Grid.Column="1">
                    <StackPanel Margin="10">
                        <TextBlock Text="Marker Options" FontWeight="Bold" HorizontalAlignment="Center" />
                        <Button Content="Add Marker"  Margin="0,10,0,0" />
                        <Button Content="Cancel"  Margin="0,10,0,0" />
                    </StackPanel>
                </Border>
            </Canvas>
        </Grid>
    </Border>


</Page>
